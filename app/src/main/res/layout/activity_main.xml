<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="-"
            android:layout_width="44dp"
            android:layout_height="46dp" android:id="@+id/sottrazione" tools:layout_editor_absoluteY="345dp"
            app:layout_constraintStart_toEndOf="@+id/somma"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/moltiplicazione"/>
    <Button
            android:text="+"
            android:layout_width="44dp"
            android:layout_height="45dp" android:id="@+id/somma" tools:layout_editor_absoluteY="345dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/sottrazione"/>
    <Button
            android:text="*"
            android:layout_width="44dp"
            android:layout_height="45dp" android:id="@+id/moltiplicazione" tools:layout_editor_absoluteY="343dp"
            app:layout_constraintStart_toEndOf="@+id/sottrazione"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/divisione"/>
    <Button
            android:text="/"
            android:layout_width="44dp"
            android:layout_height="46dp" android:id="@+id/divisione" tools:layout_editor_absoluteY="345dp"
            app:layout_constraintStart_toEndOf="@+id/moltiplicazione"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="Calcolatrice"
            android:layout_width="341dp"
            android:layout_height="73dp" android:id="@+id/textView" tools:layout_editor_absoluteY="48dp"
            tools:layout_editor_absoluteX="35dp"/>
    <EditText
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="OP1"
            android:ems="10"
            android:id="@+id/OP1" tools:layout_editor_absoluteY="201dp"
            android:inputType="textPersonName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/OP2"/>
    <EditText
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="OP2"
            android:ems="10"
            android:id="@+id/OP2" tools:layout_editor_absoluteY="201dp"
            app:layout_constraintStart_toEndOf="@+id/OP1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Risultato"
            android:layout_width="165dp"
            android:layout_height="83dp" android:id="@+id/ris" tools:layout_editor_absoluteY="519dp"
            tools:layout_editor_absoluteX="123dp"/>

</android.support.constraint.ConstraintLayout>